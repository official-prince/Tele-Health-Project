# Environment template for CareLink Health (telehealth)
# Copy to ".env" (local) or set via hosting provider dashboard.

# Runtime
NODE_ENV=development
PORT=8080
PING_MESSAGE=ping

# Public client config (Vite reads only variables prefixed with VITE_)
VITE_APP_NAME=CareLink Health
VITE_API_BASE=/api
VITE_SENTRY_DSN=

# Database (choose one; prefer managed Postgres like Neon)
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DB_NAME
# Supabase (optional alternative backend/auth)
SUPABASE_URL=
VITE_SUPABASE_URL=
SUPABASE_ANON_KEY=
VITE_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Email (transactional notifications, e.g. appointment confirmations)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="CareLink Health <noreply@carelink.health>"

# Auth / Security (used for future JWT/session signing)
SESSION_SECRET=dev_secret_example

# Monitoring / error reporting
SENTRY_DSN=

# Payments (Ghana)
CURRENCY=GHS
VITE_DEFAULT_FEE_GHS=100
FLUTTERWAVE_PUBLIC_KEY=
FLUTTERWAVE_SECRET_KEY=
FLUTTERWAVE_ENCRYPTION_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=
HUBTEL_CLIENT_ID=
HUBTEL_CLIENT_SECRET=
HUBTEL_MERCHANT_ACCOUNT=

# Deployment provider specific (optional)
NETLIFY_SITE_ID=
VERCEL_PROJECT_ID=
